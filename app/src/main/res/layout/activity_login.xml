<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolb_dangnhap"
        android:layout_width="match_parent"
        android:background="#828282"
        android:layout_height="40dp">

    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:background="#DDECD9"
        android:focusableInTouchMode="true"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="267dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="65dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/tV_dangNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="82dp"
            android:gravity="center_horizontal"
            android:text="Đăng nhập"
            android:textSize="50dp"
            android:textStyle="bold" />

        <TextView
            android:layout_below="@+id/tV_dangNhap"
            android:layout_marginTop="20dp"
            android:id="@+id/tV_userLogin"
            android:textStyle="bold"
            android:text="Tên đăng nhập: "
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:textSize="18dp"
            android:layout_width="130dp"
            android:layout_height="30dp"/>
        <EditText
            android:id="@+id/etxt_userNameLogin"
            android:layout_toRightOf="@+id/tV_userLogin"
            android:layout_marginHorizontal="10dp"
            android:layout_below="@+id/tV_dangNhap"
            android:paddingHorizontal="5dp"
            android:layout_marginTop="20dp"
            android:hint="User Name..."
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>


        <TextView
            android:id="@+id/tV_passWordLogin"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tV_dangNhap"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="70dp"
            android:text="Mật khẩu: "
            android:textSize="18dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/etxt_passWordLogin"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tV_dangNhap"
            android:layout_marginTop="70dp"
            android:layout_toRightOf="@+id/tV_passWordLogin"
            android:hint="Password..."
            android:layout_marginHorizontal="10dp"
            android:paddingHorizontal="5dp"
            android:background="#fff"
            android:ems="20"
            android:inputType="textPassword" />
        <CheckBox
            android:id="@+id/chBox_rememberAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etxt_passWordLogin"
            android:layout_alignParentStart="true"
            android:layout_marginStart="150dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:background="#00000000"
            android:layout_toRightOf="@+id/chBox_rememberAccount"
            android:layout_below="@id/etxt_passWordLogin"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:textStyle="normal"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="17dp"
            android:text="Ghi nhớ tài khoản"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>

        <Button
            android:id="@+id/btn_login_login"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tV_passWordLogin"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="200dp"
            android:background="@drawable/backgroud_dangnhap"
            android:layout_marginTop="58dp"
            android:textColor="#ffff"
            android:text="Đăng nhập" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_login_login"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="17sp"
            android:textStyle="normal"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="Bạn chưa có tài khoản?" />

        <Button
            android:id="@+id/btn_regester_login"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_login_login"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="200dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffff"
            android:background="@drawable/backgroud_dangky"
            android:text="Đăng ký" />

    </RelativeLayout>
</LinearLayout>


