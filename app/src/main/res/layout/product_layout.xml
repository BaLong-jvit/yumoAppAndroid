<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="3dp"
    android:background="#FFFFFF"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imBtn_hinhanh"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:scaleType="fitCenter"
        android:layout_margin="5dp"
        android:padding="0dp"
        android:layout_gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_tensanpham"
            android:textStyle="bold"
            android:textSize="13sp"
            android:text="giày thể thao"
            android:gravity="left|center"
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_width="match_parent"
            android:layout_height="34dp"/>
        <RelativeLayout
            android:id="@+id/gia"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_tensanpham">
            <TextView
                android:id="@+id/gia_SanPham"
                style="@android:style/Widget.TextView"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingLeft="3dp"
                android:layout_marginLeft="5dp"
                android:text="240.000"
                android:textAlignment="center"
                android:textColor="#FA3326"
                android:textSize="17sp"
                android:textStyle="italic" />
            <LinearLayout
                android:layout_below="@+id/gia_SanPham"
                android:layout_alignParentLeft="true"
                android:layout_width="100dp"
                android:layout_height="19dp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/gia_SanPhamCu"
                    android:textStyle="italic"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:text="180.000"
                    android:textSize="12sp"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/txt_tensanpham"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/SanPhamDaBan"
                android:textStyle="italic"
                android:textSize="12sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="14dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@+id/SanPhamDaBan"
                android:text="Đã bán: "
                android:textSize="12dp"
                android:textStyle="italic" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/txt_tensanpham"
            android:layout_marginTop="20dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/bonus"
                android:textStyle="italic"
                android:textSize="12sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="14dp"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/icon_uytin"
            android:layout_margin="5dp"
            android:layout_width="42dp"
            android:layout_height="14dp"/>
        <TextView
            android:id="@+id/text_thuonghieu"
            android:text="Thời trang Gucci"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>