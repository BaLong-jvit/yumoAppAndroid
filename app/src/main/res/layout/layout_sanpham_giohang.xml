<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_marginVertical="10dp"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="140dp">
    <ImageView
        android:id="@+id/im_hinhSanpham"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <RelativeLayout
        android:layout_width="258dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_tenSanpham"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thành tiền: " />

            <TextView
                android:id="@+id/txt_tonggiaSP"
                style="@android:style/Widget.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#FA3326"
                android:textSize="20sp"
                android:textStyle="italic" />

        </LinearLayout>
        <LinearLayout
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:layout_marginTop="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Size: 38"
                android:id="@+id/size"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Màu: Xanh Đen"
                android:id="@+id/style"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="5dp">

            <Button
                android:id="@+id/btn_minusgio"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:background="@drawable/border_gray2px"
                android:focusable="false"
                android:gravity="center"
                android:text="-"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txt_soluongcanmuagio"
                android:layout_width="50dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:background="@drawable/border_gray2px"
                android:focusable="false"
                android:gravity="center"
                android:inputType="number"
                android:text="1" />

            <Button
                android:id="@+id/btn_plusgio"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:background="@drawable/border_gray2px"
                android:focusable="false"
                android:gravity="center"
                android:text="+" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>